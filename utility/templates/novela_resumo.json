    "video_structure": {
      "opening": {
        "duration": "5-10 segundos",
        "elements": [
          "Saudação envolvente (ex: 'Fala galera!', 'Oi pessoal!')",
          "Anúncio da novela (ex: 'Resumo da semana de Dona de Mim')",
          "Hook dramático (ex: 'Você não vai acreditar no que aconteceu!')"
        ]
      },
      "development": {
        "duration": "45-75 segundos",
