  "script_pattern": {
    "style": "dramatic",
    "tone": "reverent",
    "structure": "narrative",
    "video_structure": {
      "opening": {
        "duration": "5-15 segundos",
        "elements": [
          "Saudação calorosa (ex: 'A paz do Senhor!', 'Que Deus abençoe sua vida!')",
          "Frase impactante, pergunta ou versículo (ex: 'Você já se perguntou por que Deus permite o sofrimento?')"
        ]
      },
      "development": {
        "duration": "40-70 segundos",
        "elements": [
          "Leitura bíblica ou citação sagrada",
          "Explicação com clareza e amor",
          "Exemplos práticos da vida cotidiana",
          "Testemunhos ou reflexões reais"
        ]
      },
      "closing": {
        "duration": "10-15 segundos",
        "elements": [
          "Conclusão com ensinamento ou chamada à ação espiritual",
          "Convite à oração, leitura bíblica ou mudança de vida",
          "'Deixe seu comentário, compartilhe com alguém que precisa ouvir isso'"
        ]
      }
    },
    "voice_settings": {
      "voice": "pt-BR-FranciscoNeural",
      "rate": "slow",
      "volume": 1.0,
      "pitch": "low"
    },
    "content_types": {
      "versiculo_dia": "Versículo do dia com breve reflexão",
      "oracoes": "Orações curtas para temas específicos (ansiedade, família, enfermidade)",
      "estudo_biblico": "Estudo bíblico de 3 a 10 minutos",
      "curiosidades_biblicas": "Curiosidades bíblicas ('Sabia que Jesus chorou apenas uma vez na Bíblia?')",
      "historias_biblicas": "Histórias bíblicas narradas (com trilha e emoção)",
      "duvidas_comuns": "Respostas a dúvidas comuns ('É pecado sentir raiva?' 'O que é o Espírito Santo?')",
      "conselhos_espirituais": "Conselhos espirituais práticos ('Como manter a fé nos tempos difíceis')"
    },
    "tone_guidelines": {
      "leitura_biblica": {
        "style": "Solene, pausada, com reverência",
        "voices": ["Phillip", "Deep Ray"]
      },
      "ensino_reflexao": {
        "style": "Acolhedor, leve, conversacional",
        "voices": ["Drew", "James"]
      },
      "chamada_fe": {
        "style": "Inspiradora, encorajadora, com emoção",
        "note": "Faça pausas curtas para criar espaço de reflexão"
      }
    },
    "pauses_strategy": {
